.left_contents
  .left_header
  
    .left_header__box
      = current_user.name
      %ul.left_header__box__lists
        %li.left_header__box__lists__list
          =link_to new_group_path do
            =fa_icon 'edit', class: "left_header__box__lists__list__icon", data: {"turbolinks" => false} 
        %li.left_header__box__lists__list
          =link_to edit_user_path(current_user) do
            =fa_icon 'cog', class: "left_header__box__lists__list__icon"
          

  .groups
    - current_user.groups.each do |group|
      .groups__box
        =link_to group_messages_path(group) do
          %p.groups__box__name 
            =group.name
          %p.groups__box__latest-message
            =group.show_last_message
            
